#!/bin/bash

# 인자가 정확히 2개인지 확인
if [ $# -ne 2 ]; then
    echo "Usage: ./ex3-1.sh num1 num2"
    exit 1
fi

a=$1
b=$2

echo "입력값: a = $a, b = $b"
echo "-----------------------"

# 사칙연산
echo "a + b = $((a + b))"
echo "a - b = $((a - b))"
echo "a * b = $((a * b))"

# 나눗셈은 0 나누기 체크
if [ $b -ne 0 ]; then
    echo "a / b = $((a / b))"
else
    echo "a / b = 계산 불가 (0으로 나눌 수 없음)"
fi
