#!/bin/bash

# 인자가 1개 이상인지 확인
if [ $# -lt 1 ]; then
    echo "Usage: ./ex3-2.sh x1 x2 x3 ..."
    exit 1
fi

echo "y = (1/2) * x^2 계산"
echo "-----------------------------"

# 반복문으로 모든 입력 처리
for x in "$@"
do
    # 실수 계산을 위해 bc -l 사용
    y=$(echo "0.5 * $x * $x" | bc -l)
    echo "x = $x → y = $y"
done
